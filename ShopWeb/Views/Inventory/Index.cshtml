@model IEnumerable<ShopWeb.Application.TransferObjects.Inventory.InventoryVm>

@{
    ViewData["Title"] = "Inwentaryzacje";
}

<h1>@ViewData["Title"]</h1>
<p>
    <a asp-action="CreateInventory">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExecuteWay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyInformation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedByUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="clickable-row" data-url="@Url.Action("InventorySummary", "Inventory", item)" style="cursor: pointer;" >
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExecuteWay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyInformation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedByUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td onclick="event.stopPropagation();">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                    <i class="bi bi-pencil"></i> Edytuj
                </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                    <i class="bi bi-eye"></i> Szczegóły
                </a>
                @* <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                    <i class="bi bi-trash"></i> Usuń
                </a> *@
            </td>
            @* <td >
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                @* @Html.ActionLink("Usuń", "Delete", new { id = item.Id }) 
            </td>*@
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function() {
            // Make table rows clickable
            $('.clickable-row').click(function() {
                window.location = $(this).data('url');
            });
        });
    </script>
}
