@model IEnumerable<ShopWeb.Application.TransferObjects.Inventory.InventoryVm>

@{
    ViewData["Title"] = "Inwentaryzacje";
}

<h1>@ViewData["Title"]</h1>
<p>
    <a asp-action="CreateInventory">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExecuteWay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyInformation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedByUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExecuteWay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyInformation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedByUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                @* @Html.ActionLink("Usuń", "Delete", new { id = item.Id }) *@
            </td>
        </tr>
}
    </tbody>
</table>
