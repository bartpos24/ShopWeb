@using Microsoft.AspNetCore.Identity
@using ShopWeb.Extensions

<ul class="navbar-nav">
	@{
		var userInfo = User.GetUserInfo();
	}
	@if (User.Identity?.IsAuthenticated == true && userInfo != null)
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Zalogowano: <strong>@userInfo.FullName</strong> Email: <strong>@userInfo.Email</strong></a>
		</li>
		<li class="nav-item ms-3">
			<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
		</li>
	}
</ul>
